@model DTO.CarBooking.CreateCarBookingDTO

@{
    ViewData["Title"] = "Create Car Booking";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Car Booking Form</h2>
    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="row g-3">
            <!-- Car ID -->
            <div class="col-12">
                <label asp-for="CarId" class="form-label">Car ID</label>
                <input asp-for="CarId" class="form-control" required />
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>

            <!-- Pick-Up Location -->
            <div class="col-12">
                <label asp-for="PickUpLocation" class="form-label">Pick-Up Location</label>
                <input asp-for="PickUpLocation" class="form-control" placeholder="Enter pick-up location" required />
                <span asp-validation-for="PickUpLocation" class="text-danger"></span>
            </div>

            <!-- Drop-Off Location -->
            <div class="col-12">
                <label asp-for="DropOffLocation" class="form-label">Drop-Off Location</label>
                <input asp-for="DropOffLocation" class="form-control" placeholder="Enter drop-off location" required />
                <span asp-validation-for="DropOffLocation" class="text-danger"></span>
            </div>

            <!-- Start Date and Time -->
            <div class="col-12">
                <label asp-for="StartDate" class="form-label">Start Date and Time</label>
                <input asp-for="StartDate" type="datetime-local" class="form-control" required />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <!-- End Date and Time -->
            <div class="col-12">
                <label asp-for="EndDate" class="form-label">End Date and Time</label>
                <input asp-for="EndDate" type="datetime-local" class="form-control" required />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <!-- Number of Passengers -->
            <div class="col-12">
                <label asp-for="NumOfPassengers" class="form-label">Number of Passengers</label>
                <input asp-for="NumOfPassengers" type="number" class="form-control" min="1" max="20" required />
                <span asp-validation-for="NumOfPassengers" class="text-danger"></span>
            </div>

            <!-- With Driver -->
            <div class="col-12">
                <div class="form-check">
                    <input asp-for="WithDriver" class="form-check-input" type="checkbox" />
                    <label asp-for="WithDriver" class="form-check-label">With Driver</label>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary">Submit Booking</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}